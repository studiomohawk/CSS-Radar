html {
	background: url(t-cleantexture) repeat 0 0;
	color: foreground;
	border-top: solid 8px green;
	-webkit-text-size-adjust: 100%;
	-ms-text-size-adjust: 100%;
	-webkit-overflow-scrolling: touch;
}
.unit-inner {
	column(3);
	margin: 0 auto;
}
.unit-logo {
	padding: 4em 0 4.5em;
}
.logo-css:after {
	font-family: 'nounproject';
	content: "\e31f";
	display: inline-block;
	position: relative;
	top: 6px;
	margin: 0 6px;
}
.logo {
	font-family: 'Outage', sans-serif;
	line-height: 1;
	text-align: center;
	margin: 0;
	position: relative;
	top: 6px;
}
.group-title {
//	text-align: center;
}
.post-title {
	margin-bottom: 0;
}
.date-pub {
	color: #545a60;
	text-transform: uppercase;
	letter-spacing: 1px;
	display: inline-block;
	margin: 0 !important;
	position: relative;
	top: -5px;
}
.date-pub.update:after {
	content: '/';
	display: inline-block;
}
.content {
	h1, .h1 {
		margin-top: 0;
		margin-bottom: 0;
	}
	ul {
		list-style: square;
		padding-left: 0;
	}
	ol {
		list-style: decimal;
		padding-left: 0;
	}
	p code, li code {
		monospace();
		margin: 0 2px;
		padding: 0px 5px;
		border: 1px solid #EAEAEA;
		background-color: #F8F8F8;
		border-radius: 3px;
	}
	.highlight pre {
		color: #fafafa;
		background-color: #1d1f21;
		margin: 0;
		padding: 1.8rem;
	}
	pre code {
		monospace();
	}
}
.unit-nav {
	background: rgba(204, 204, 204, 0.2);
	color: #BDBDBD;
	border-bottom: 1px solid #282828;
}
.unit-nav ul {
	list-style: none;
	padding-left: 0;
	margin-bottom: 0;
	text-align: right;
}
.unit-nav li {
	display: inline-block;
	border-right: 1px solid rgba(204, 204, 204, 0.3);
}
.unit-nav .old {
	border-left: 1px solid rgba(204, 204, 204, 0.3);
}
.unit-nav .tweet {
	border: 0 none;
	position: relative;
	top: 4px;
}
.unit-nav a {
	display: inline-block;
	font-weight: bold;
	facebook();
	text-align: center;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	-webkit-transition-duration: 0.2s;
	-moz-transition-duration: 0.2s;
	transition-duration: 0.2s;
	-webkit-user-select:none;
	-moz-user-select:none;
	-ms-user-select:none;
	user-select:none;
}
.unit-nav a:hover, .unit-nav a:focus {
	background: #1d1f21;
	color: #fafafa;
}
.unit-nav .new a {
	margin-left: -6px;
}
.the-footer {
	background: url(t-3pxtile) repeat 0 0;
	color: #fafafa;
}
.madeintokyo {
	margin-bottom: 0;
}

